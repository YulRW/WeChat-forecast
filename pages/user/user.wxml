<scroll-view scroll-y class="scrollPage">

    <!-- 背景颜色 -->
    <view class="UCenter-bg">
        <view class="avatar-user">
            <open-data type='userAvatarUrl' class=''></open-data>
        </view>

        <!-- 波浪 -->
        <image src="/assets/wave.gif" mode="scaleToFill" class="gif-wave"></image>
    </view>
    <view class="padding flex text-center text-grey bg-white shadow-warp">

    </view>
    <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">

        <view class="cu-item arrow">
            <navigator class="content" url="/pages/forecast/forecast" hover-class="none">
                <image src="/assets/yuce.png" class="png luru" mode="aspectFit"></image>
                <text class="text-grey">预测</text>
            </navigator>
        </view>

        <view class="cu-item arrow">
            <navigator class="content" url="/pages/index/index" hover-class="none">
                <image src="/assets/luru.png" class="png luru" mode="aspectFit"></image>
                <text class="text-grey">录入</text>
            </navigator>
        </view>

        <view class="cu-item arrow">
            <button class="cu-btn content" open-type="share">
                <image src="/assets/share.png" class="png luru" mode="aspectFit"></image>
                <text class="text-grey">分享</text>
            </button>
        </view>

    </view>
</scroll-view>